{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2019",
      "DOM"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "types": [
      "vitest"
    ],
    "resolveJsonModule": true,
    "allowJs": false
  },
  "include": [
    "index.ts",
    "directive.ts",
    "rbac.ts",
    "core/**/*.ts",
    "config/**/*.ts",
    "loaders/**/*.ts",
    "composables/**/*.ts",
    "types/**/*.ts",
    "utils/**/*.ts"
  ],
  "typeRoots": [
    "node_modules/@types",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}