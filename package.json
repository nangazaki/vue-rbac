{
  "name": "@nangazaki/vue-rbac",
  "version": "1.0.1",
  "description": "Role-Based Access Control (RBAC) implementation for Vue.js",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "vue",
    "rbac",
    "access-control",
    "roles",
    "permissions",
    "directive",
    "vue3",
    "vue-rbac"
  ],
  "author": "Helder Cambuta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nangazaki/vue-rbac.git"
  },
  "peerDependencies": {
    "vue": "^3.3.0 || ^3.4.0 || ^3.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "rollup -c --bundleConfigAsCjs -w",
    "build": "rollup -c --bundleConfigAsCjs",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "rollup": "^4.40.0",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vue": "^3.5.13"
  }
}
